@model Blogbaster.Core.Data.Entities.Category

@{
    ViewBag.Title = "Delete";
}
@Html.Partial("_MenuPartial")
<div class="jumbotron" style="margin-top:50px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (!Model.Posts.Any())
            {
                <h2>Ви впевнені що хочете видалити?</h2>
                <dl class="dl-horizontal">
                    <dt>
                        <label class="control-label col-md-2">Категорія</label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                </dl>
                <input type="submit" value="Видалити" class="btn btn-danger" />
            }
            else
            {
                <sppan style="color:red">Не може бути видалено, бо існує пост з цією котегорією!</sppan>
            }

            @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
