@using Blogbaster.Core.Data.Enums
@model Blogbaster.Core.Data.Entities.Post

@{
    ViewBag.Title = Model.Title;
}
@Html.Partial("_MenuPartial")

<div class="container">
    <div class="row">
        <div class="col-md-3 hidden-sm hidden-xs">
            <div class="jumbotron post" style="padding: 10px">
                @Html.Raw("<img style='width:230px; height:230px; margin-left: 2px;' src=\"data:image/jpeg;base64,"
                          + Convert.ToBase64String(Model.Image) + "\" />")
            </div>
            @if (Model.ApplicationUser.Posts.Where(a => a.Status == Status.Published && a.Id != Model.Id).ToList().Count > 0)
            {
                <div class="jumbotron post" style="padding: 10px">
                
                    <p class="text-center">Інші роботи автора : </p>
                    <ul>
                        @foreach (var post in Model.ApplicationUser.Posts.Where(a => a.Status == Status.Published && a.Id != Model.Id))
                        {
                            <li>
                                @if (post.Title.Length > 12)
                                {
                                    @Html.ActionLink(post.Title.Substring(0, 12) + "...", "Details", "Posts", new {id = post.Id}, new {@class = "btn-link"})
                                }
                                else
                                {
                                    @Html.ActionLink(post.Title, "Details", "Posts", new {id = post.Id}, new {@class = "btn-link"})
                                }
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
        <div class="col-md-9">
            <div class="jumbotron post">
                <h2 style="margin-top: 0;">@Model.Title</h2>
                <p class="lead">Автор - @Model.ApplicationUser.UserName</p>
                <hr class="posthr" />
                <p class="lead">@Model.Text</p>
            </div>
        </div>
    </div>
</div>
