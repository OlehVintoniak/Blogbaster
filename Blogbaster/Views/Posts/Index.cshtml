@using Blogbaster.Core.Data.Enums
@model IEnumerable<Blogbaster.Core.Data.Entities.Post>

@{
    ViewBag.Title = "Оголошення";
}
@Html.Partial("_MenuPartial")
<div class="jumbotron">
    @Html.ActionLink("Категорії", "Index", "Categories", null, new { @class = "btn btn-primary" })
</div>
<div class="jumbotron post" style="overflow: auto">
    <table class="table">
        <tr>
            <th>
                <span>Автор</span>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                <span>Зображення</span>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th></th>
            <th></th>
            <th>
            </th>
        </tr>

        @foreach (var post in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => post.ApplicationUser.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => post.Title)
                </td>
                <td>
                    @Html.Raw("<img style='width:50px; height:50px;' src=\"data:image/jpeg;base64,"
                                                         + Convert.ToBase64String(post.Image) + "\" />")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => post.DateCreated)
                </td>
                <td>
                    @Html.ActionLink("Деталі", "Details", new { id = post.Id }, new { @class = "btn btn-primary" })
                </td>
                <td>
                    @Html.ActionLink("Видалити", "Delete", new { id = post.Id }, new { @class = "btn btn-danger" })
                </td>
                <td>
                    @if (post.Status == Status.Published)
                    {
                        <label class="container-c">
                            <input type="checkbox" class="publish" checked id="@post.Id" />
                            <span class="checkmark"></span>
                        </label>
                    }
                    else
                    {
                        <label class="container-c">
                            <input type="checkbox" class="publish" id="@post.Id" />
                            <span class="checkmark"></span>
                        </label>
                    }
                </td>
            </tr>
        }

    </table>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $(".publish").on("click", function() {
                Publish($(this).attr("id"));
            });
        });

        function Publish(postId) {
            if ($(window).data('ajaxready') === false)
                return;
            SpinnerHelper.showSpinner();
            $(window).data('ajaxready', false);
            $.ajax({
                url: '@Url.Action("Publish","Posts")',
                type: "POST",
                data: {
                    postId: postId
                },
                dataType: 'html',
                success: function (data) {
                    SpinnerHelper.hideSpinner();
                    $(window).data('ajaxready', true);
                }
            });
        }
    </script>
}